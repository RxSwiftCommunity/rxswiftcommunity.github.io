<!doctype html>
<html lang="en">

  <head>

    <% title = current_page.data.title || "RxSwiftCommunity" %>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= title %></title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="For projects that support RxSwift.">
    <meta name="author" content="RxSwiftCommunity">

    <%= stylesheet_link_tag "app" %>

  </head>

  <body class="<%= page_classes %>">


    <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">

          <a href="/"><%= image_tag('logo.svg', :alt => 'RxSwiftCommunity Logo', :class => 'logo') %></a>

          <h1><%= title %></h1>

        </div>
        </div>
      </div>
    </header>

    <!-- Page Content -->
    <div class="container">

      <%= yield %>

      <!-- Footer -->
      <footer>
        <div class="row">
          <div class="col-lg-12">
            <hr>
            <p>This webpage is <a href="https://github.com/RxSwiftCommunity/rxswiftcommunity.github.io">open source</a> and we <a href="https://github.com/RxSwiftCommunity/contributors">welcome contributions</a>.</p>
          </div>
        </div>
      </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery & Bootstrap -->
    <%= javascript_include_tag  "jquery.min", "bootstrap.min", "masonry.pkgd.min", "app.js" %>

  </body>

</html>
